@model MvcBall.Models.BallColorViewModel

@{
    ViewData["Title"] = "Index";
}


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Balls" asp-action="Index" method="get">
    <p>
        <select asp-for="BallColor" asp-items="Model.Color">
            <option value="">All</option>
        </select>
        Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Balls[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balls[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balls[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balls[0].Players)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Balls) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Players)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
